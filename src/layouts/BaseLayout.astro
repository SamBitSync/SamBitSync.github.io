---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sambit's portfolio and external memory system - cognitive science research, epistemic practice, and cross-domain synthesis" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="color-scheme" content="light dark" />
  <title>{title}</title>

  <meta name="author" content="Sambit" />
  <meta name="keywords" content="cognitive science, epistemology, complexity science, research portfolio" />

  <!-- Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <!-- HTMX for progressive enhancement -->
  <script src="https://unpkg.com/htmx.org@2.0.3" integrity="sha384-0895/pl2MU10Hqc6jd4RvrthNlDiE9U1tWmX7WRESftEDRosgxNsQG/Ze9YMRzHq" crossorigin="anonymous"></script>
</head>

<body>
  <div id="app">
    <header class="header">
      <nav class="nav">
        <a href="/" class="brand">Sambit</a>

        <div class="nav-links">
          <a href="/maps" class="nav-link">Maps</a>
          <a href="/meta" class="nav-link">Meta</a>
          <a href="/process" class="nav-link">Process</a>
          <a href="/project" class="nav-link">Project</a>
        </div>
      </nav>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>Work in progress, thoughts subject to change</p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  /* CSS Reset & Variables */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    /* Light mode (default) */
    --bg: #fafafa;
    --surface: #ffffff;
    --text-primary: #0a0a0a;
    --text-secondary: #525252;
    --border: #e5e5e5;
    --accent: #3b82f6;
    --accent-hover: #2563eb;

    /* Typography */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;

    /* Spacing */
    --max-width: 900px;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    :root {
      --bg: #0a0a0a;
      --surface: #171717;
      --text-primary: #fafafa;
      --text-secondary: #a3a3a3;
      --border: #262626;
      --accent: #60a5fa;
      --accent-hover: #3b82f6;
    }
  }

  /* Base Styles */
  html {
    color-scheme: light dark;
  }

  body {
    font-family: var(--font-sans);
    line-height: 1.6;
    color: var(--text-primary);
    background: var(--bg);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  #app {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  /* Header & Navigation */
  .header {
    background: var(--surface);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .brand {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .brand:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 400;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  /* Main Content */
  .main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 2rem;
    width: 100%;
  }

  /* Footer */
  .footer {
    background: var(--surface);
    border-top: 1px solid var(--border);
    padding: 2rem;
    text-align: center;
  }

  .footer p {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
  }

  h1 { font-size: 2rem; margin-bottom: 1rem; }
  h2 { font-size: 1.5rem; margin: 2rem 0 1rem; }
  h3 { font-size: 1.25rem; margin: 1.5rem 0 0.75rem; }

  p {
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  a {
    color: var(--accent);
    text-decoration: none;
  }

  a:hover {
    color: var(--accent-hover);
    text-decoration: underline;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background: var(--surface);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    border: 1px solid var(--border);
  }

  pre {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  pre code {
    background: none;
    border: none;
    padding: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .main {
      padding: 2rem 1rem;
    }

    h1 { font-size: 1.75rem; }
    h2 { font-size: 1.375rem; }
    h3 { font-size: 1.125rem; }
  }
</style>
