---
export interface Props {
  title: string;
  description?: string;
  mode?: 'academic' | 'systems';
}

const { title, description = "Sambit's intellectual workspace - trilingual brain research, Nepal perspectives, and learning computational modeling", mode = 'academic' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class={mode}>
<head>
  <meta charset="utf-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  
  <!-- Academic credibility meta -->
  <meta name="author" content="Sambit" />
  <meta name="keywords" content="complexity science, epistemology, systems thinking, academic research" />
  
  <!-- Fonts for academic credibility -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
  
  <!-- HTMX for progressive enhancement -->
  <script src="https://unpkg.com/htmx.org@2.0.3" integrity="sha384-0895/pl2MU10Hqc6jd4RvrthNlDiE9U1tWmX7WRESftEDRosgxNsQG/Ze9YMRzHq" crossorigin="anonymous"></script>
</head>

<body>
  <div id="app" class="layout">
    <header class="header">
      <nav class="nav">
        <div class="nav-brand">
          <a href="/" class="brand-link">
            <span class="brand-name">Sambit Maps</span>
            <span class="brand-domain">.systems</span>
          </a>
        </div>
        
        
        <div class="nav-links">
          <a href="/research" class="nav-link">Current Work</a>
          <a href="/frameworks" class="nav-link">Learning</a>
          <a href="/notes" class="nav-link">Notes</a>
          <a href="/about" class="nav-link">About</a>
        </div>
      </nav>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <div class="footer-content">
        <p>&copy; 2025 Sambit. Work in progress, thoughts subject to change.</p>
      </div>
    </footer>
  </div>
</body>
</html>

<style>
  /* CSS Custom Properties for Academic-Systems Theming */
  :root {
    /* Academic palette - serious, credible */
    --academic-primary: #1a1a1a;
    --academic-secondary: #4a4a4a;
    --academic-accent: #2563eb;
    --academic-bg: #fafafa;
    --academic-surface: #ffffff;
    
    /* Systems palette - dynamic, explorable */
    --systems-primary: #0f172a;
    --systems-secondary: #334155;
    --systems-accent: #06b6d4;
    --systems-bg: #f8fafc;
    --systems-surface: #ffffff;
    
    /* Typography scale */
    --font-serif: 'Crimson Text', Georgia, serif;
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  /* Academic Mode Styling */
  .academic {
    --primary: var(--academic-primary);
    --secondary: var(--academic-secondary);
    --accent: var(--academic-accent);
    --bg: var(--academic-bg);
    --surface: var(--academic-surface);
  }

  /* Systems Mode Styling */
  .systems {
    --primary: var(--systems-primary);
    --secondary: var(--systems-secondary);
    --accent: var(--systems-accent);
    --bg: var(--systems-bg);
    --surface: var(--systems-surface);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-sans);
    line-height: 1.6;
    color: var(--primary);
    background: var(--bg);
    transition: all 0.3s ease;
  }

  .layout {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  /* Header & Navigation */
  .header {
    background: var(--surface);
    border-bottom: 1px solid var(--secondary);
    padding: 1rem 0;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .brand-link {
    text-decoration: none;
    color: var(--primary);
    font-weight: 600;
    font-size: 1.25rem;
  }

  .brand-domain {
    color: var(--accent);
    font-weight: 300;
  }

  .mode-toggle {
    background: var(--accent);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    transition: opacity 0.2s ease;
  }

  .mode-toggle:hover {
    opacity: 0.8;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    text-decoration: none;
    color: var(--secondary);
    font-weight: 400;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  /* Main Content */
  .main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    flex: 1;
  }

  /* Footer */
  .footer {
    background: var(--surface);
    border-top: 1px solid var(--secondary);
    padding: 2rem 0;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    text-align: center;
    color: var(--secondary);
    font-size: 0.875rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
    }
    
    .nav-links {
      gap: 1rem;
    }
    
    .main {
      padding: 2rem 1rem;
    }
  }

  /* Academic Mode Specific Styles */
  .academic .main {
    line-height: 1.8;
  }

  .academic h1, .academic h2, .academic h3 {
    font-family: var(--font-serif);
    font-weight: 600;
  }

  /* Systems Mode Specific Styles */
  .systems .main {
    line-height: 1.6;
  }

  .systems h1, .systems h2, .systems h3 {
    font-family: var(--font-sans);
    font-weight: 600;
  }
</style>