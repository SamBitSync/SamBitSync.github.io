---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sambit's portfolio and external memory system - cognitive science research, epistemic practice, and cross-domain synthesis" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="color-scheme" content="light dark" />
  <title>{title}</title>

  <meta name="author" content="Sambit" />
  <meta name="keywords" content="cognitive science, epistemology, complexity science, research portfolio" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Crimson+Pro:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- HTMX -->
  <script src="https://unpkg.com/htmx.org@2.0.3" integrity="sha384-0895/pl2MU10Hqc6jd4RvrthNlDiE9U1tWmX7WRESftEDRosgxNsQG/Ze9YMRzHq" crossorigin="anonymous"></script>
</head>

<body>
  <div id="app">
    <header class="header">
      <nav class="nav">
        <a href="/" class="brand">Sambit</a>

        <div class="nav-links">
          <a href="/maps" class="nav-link">Maps</a>
          <a href="/meta" class="nav-link">Meta</a>
          <a href="/process" class="nav-link">Process</a>
          <a href="/project" class="nav-link">Project</a>
        </div>
      </nav>
    </header>

    <main class="main">
      <slot />
    </main>

    <footer class="footer">
      <p>Work in progress, thoughts subject to change</p>
    </footer>
  </div>
</body>
</html>

<style is:global>
  /* CSS Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    /* Light mode */
    --bg: #fafafa;
    --bg-elevated: #ffffff;
    --surface: #ffffff;
    --surface-elevated: #ffffff;
    --text-primary: #1a1a1a;
    --text-secondary: #666666;
    --text-tertiary: #999999;
    --border: #e8e8e8;
    --border-subtle: #f2f2f2;
    --accent: #2563eb;
    --accent-hover: #1d4ed8;
    --accent-subtle: #dbeafe;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);

    /* Typography */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    --font-serif: 'Crimson Pro', Georgia, serif;
    --font-mono: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;

    /* Spacing */
    --max-width: 900px;
    --max-width-wide: 1200px;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    :root {
      --bg: #0a0a0a;
      --bg-elevated: #141414;
      --surface: #141414;
      --surface-elevated: #1f1f1f;
      --text-primary: #ededed;
      --text-secondary: #a3a3a3;
      --text-tertiary: #737373;
      --border: #262626;
      --border-subtle: #1a1a1a;
      --accent: #60a5fa;
      --accent-hover: #93c5fd;
      --accent-subtle: #1e3a8a;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.4);
      --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.5), 0 1px 2px -1px rgb(0 0 0 / 0.5);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.5), 0 2px 4px -2px rgb(0 0 0 / 0.5);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.6), 0 4px 6px -4px rgb(0 0 0 / 0.6);
    }
  }

  /* Base Styles */
  html {
    color-scheme: light dark;
  }

  body {
    font-family: var(--font-sans);
    font-size: 16px;
    line-height: 1.65;
    color: var(--text-primary);
    background: var(--bg);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  #app {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  /* Header & Navigation */
  .header {
    background: var(--surface);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(8px);
    background: color-mix(in srgb, var(--surface) 85%, transparent);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 1.25rem 2rem;
  }

  .brand {
    font-size: 1.125rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .brand:hover {
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -0.25rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  /* Main Content */
  .main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 4rem 2rem;
    width: 100%;
  }

  /* Footer */
  .footer {
    background: var(--surface);
    border-top: 1px solid var(--border);
    padding: 2.5rem 2rem;
    text-align: center;
  }

  .footer p {
    color: var(--text-tertiary);
    font-size: 0.875rem;
    font-style: italic;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.25rem;
    line-height: 1.1;
  }

  h2 {
    font-size: 1.875rem;
    margin: 3rem 0 1.25rem;
    font-weight: 600;
  }

  h3 {
    font-size: 1.5rem;
    margin: 2.5rem 0 1rem;
  }

  h4 {
    font-size: 1.25rem;
    margin: 2rem 0 0.75rem;
  }

  p {
    margin-bottom: 1.25rem;
    color: var(--text-primary);
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  a:hover {
    color: var(--accent-hover);
  }

  strong {
    font-weight: 600;
    color: var(--text-primary);
  }

  em {
    font-style: italic;
  }

  /* Code */
  code {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--surface-elevated);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    border: 1px solid var(--border);
    color: var(--text-primary);
  }

  pre {
    background: var(--surface-elevated);
    border: 1px solid var(--border);
    border-radius: 0.625rem;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 2rem 0;
    line-height: 1.7;
    box-shadow: var(--shadow-sm);
  }

  pre code {
    background: none;
    border: none;
    padding: 0;
    font-size: 0.875rem;
  }

  /* Blockquotes */
  blockquote {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--text-secondary);
    font-style: italic;
    font-size: 1.0625rem;
  }

  /* Lists */
  ul, ol {
    margin: 1.5rem 0;
    padding-left: 1.75rem;
  }

  li {
    margin-bottom: 0.625rem;
    color: var(--text-primary);
  }

  li::marker {
    color: var(--text-tertiary);
  }

  /* Horizontal Rule */
  hr {
    border: none;
    border-top: 1px solid var(--border);
    margin: 3rem 0;
  }

  /* Images */
  img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  /* Utility Classes */
  .text-secondary {
    color: var(--text-secondary);
  }

  .text-tertiary {
    color: var(--text-tertiary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .main {
      padding: 3rem 1.25rem;
    }

    h1 { font-size: 2rem; }
    h2 { font-size: 1.625rem; }
    h3 { font-size: 1.375rem; }
    h4 { font-size: 1.125rem; }
  }

  @media (max-width: 480px) {
    h1 { font-size: 1.75rem; }
    h2 { font-size: 1.5rem; }
  }
</style>
