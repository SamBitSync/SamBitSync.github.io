---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const maps = (await getCollection('maps')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Maps | Sambit">
  <header class="page-header">
    <h1>Maps</h1>
    <p class="lead">Cross-domain connections, pattern synthesis, and conceptual mappings</p>
  </header>

  <div class="posts-grid">
    {maps.map((post) => (
      <article class="post-card">
        <a href={`/maps/${post.slug}`} class="post-link">
          <h2>{post.data.title}</h2>
          <p class="post-description">{post.data.description}</p>

          <div class="post-meta">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>

          {post.data.domains && post.data.domains.length > 0 && (
            <div class="tags">
              {post.data.domains.map((domain) => (
                <span class="tag">{domain}</span>
              ))}
            </div>
          )}

          {post.data.visualType && post.data.visualType.length > 0 && (
            <div class="visual-indicators">
              {post.data.visualType.map((type) => (
                <span class="visual-badge">{type}</span>
              ))}
            </div>
          )}
        </a>
      </article>
    ))}
  </div>

  {maps.length === 0 && (
    <div class="empty-state">
      <p>No posts yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .post-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card h2 {
    font-size: 1.375rem;
    margin: 0 0 0.75rem 0;
    color: var(--text-primary);
  }

  .post-description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .post-meta {
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tag {
    font-size: 0.8125rem;
    padding: 0.25rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 1rem;
    color: var(--text-secondary);
  }

  .visual-indicators {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .visual-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--accent);
    color: white;
    border-radius: 0.25rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .posts-grid {
      gap: 1.5rem;
    }

    .post-card {
      padding: 1.25rem;
    }
  }
</style>
