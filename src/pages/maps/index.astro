---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const maps = (await getCollection('maps')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Maps | Sambit">
  <header class="page-header">
    <h1>Maps</h1>
    <p class="lead">Cross-domain connections, pattern synthesis, and conceptual mappings</p>
  </header>

  <div class="maps-grid">
    {maps.map((map) => (
      <article class="map-card">
        <a href={`/maps/${map.id}`} class="map-link">
          {map.data.visualType && map.data.visualType.length > 0 && (
            <div class="visual-indicators">
              {map.data.visualType.map((type) => (
                <span class="visual-icon" title={type}>
                  {type === 'diagram' && '◈'}
                  {type === 'animation' && '⟳'}
                  {type === 'data-viz' && '▢'}
                  {type === 'interactive' && '⊙'}
                </span>
              ))}
            </div>
          )}

          <h2>{map.data.title}</h2>
          <p class="map-description">{map.data.description}</p>

          <div class="domains">
            {map.data.domains.map((domain) => (
              <span class="domain-tag">{domain}</span>
            ))}
          </div>

          {map.data.patterns && map.data.patterns.length > 0 && (
            <div class="patterns">
              <span class="patterns-label">Patterns:</span>
              {map.data.patterns.slice(0, 2).map((pattern, idx) => (
                <span class="pattern-item">{pattern}{idx < Math.min(1, map.data.patterns.length - 1) ? ', ' : ''}</span>
              ))}
              {map.data.patterns.length > 2 && <span class="more">+{map.data.patterns.length - 2}</span>}
            </div>
          )}
        </a>
      </article>
    ))}
  </div>

  {maps.length === 0 && (
    <div class="empty-state">
      <p>No maps yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .maps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .map-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1.75rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .map-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #2563eb 0%, #3b82f6 50%, #60a5fa 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .map-card:hover::before {
    transform: scaleX(1);
  }

  .map-card:hover {
    border-color: #3b82f6;
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .map-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .visual-indicators {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 1.25rem;
    color: var(--text-tertiary);
  }

  .visual-icon {
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .map-card:hover .visual-icon {
    opacity: 1;
    color: #3b82f6;
  }

  .map-card h2 {
    font-size: 1.375rem;
    margin: 0 0 0.75rem 0;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
  }

  .map-description {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .domains {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .domain-tag {
    font-size: 0.75rem;
    padding: 0.375rem 0.75rem;
    background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
    color: #1e40af;
    border-radius: 0.375rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    transition: all 0.2s;
  }

  [data-theme="dark"] .domain-tag {
    background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
    color: #93c5fd;
  }

  .map-card:hover .domain-tag {
    transform: translateY(-1px);
  }

  .patterns {
    font-size: 0.875rem;
    color: var(--text-secondary);
    border-top: 1px solid var(--border);
    padding-top: 0.75rem;
  }

  .patterns-label {
    font-weight: 500;
    margin-right: 0.5rem;
  }

  .pattern-item {
    font-style: italic;
  }

  .more {
    color: var(--text-tertiary);
    font-size: 0.8125rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .maps-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
