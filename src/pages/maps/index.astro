---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const maps = (await getCollection('maps')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Maps | Sambit">
  <header class="page-header">
    <h1>Maps</h1>
    <p class="lead">Tracing connections between complexity science and cognitive architecture, Bayesian epistemology and Nepali research contexts</p>
  </header>

  <div class="posts-grid">
    {maps.map((post) => (
      <article class="post-card">
        <a href={`/maps/${post.slug}`} class="post-link">
          {post.data.visualType && post.data.visualType.length > 0 && (
            <div class="visual-indicators">
              {post.data.visualType.map((type) => (
                <span class="visual-badge">{type}</span>
              ))}
            </div>
          )}

          <h2>{post.data.title}</h2>
          <p class="post-description">{post.data.description}</p>

          {post.data.domains && post.data.domains.length > 0 && (
            <div class="tags">
              {post.data.domains.map((domain) => (
                <span class="tag">{domain}</span>
              ))}
            </div>
          )}

          <div class="post-meta">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </time>
          </div>
        </a>
      </article>
    ))}
  </div>

  {maps.length === 0 && (
    <div class="empty-state">
      <p>No posts yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3.5rem;
  }

  .page-header h1 {
    font-size: 2.75rem;
    margin-bottom: 0.75rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0;
    font-weight: 400;
    line-height: 1.65;
    max-width: 720px;
  }

  .posts-grid {
    display: grid;
    gap: 2rem;
  }

  .post-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow-sm);
  }

  .post-card:hover {
    border-color: var(--accent);
    box-shadow: var(--shadow-md);
    transform: translateY(-3px);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .visual-indicators {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .visual-badge {
    font-size: 0.6875rem;
    padding: 0.25rem 0.625rem;
    background: var(--accent-subtle);
    color: var(--accent);
    border-radius: 0.25rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    font-weight: 600;
    line-height: 1.3;
  }

  .post-description {
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
    line-height: 1.65;
    font-size: 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .tag {
    font-size: 0.8125rem;
    padding: 0.375rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border-subtle);
    border-radius: 0.375rem;
    color: var(--text-secondary);
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .post-card:hover .tag {
    border-color: var(--border);
  }

  .post-meta {
    padding-top: 1rem;
    border-top: 1px solid var(--border-subtle);
  }

  .post-meta time {
    font-size: 0.875rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    color: var(--text-secondary);
  }

  .empty-state p {
    font-size: 1.0625rem;
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2.5rem;
    }

    .page-header h1 {
      font-size: 2.25rem;
    }

    .posts-grid {
      gap: 1.5rem;
    }

    .post-card {
      padding: 1.5rem;
    }

    .post-card h2 {
      font-size: 1.375rem;
    }
  }
</style>
