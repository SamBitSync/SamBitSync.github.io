---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const maps = await getCollection('maps');
  return maps.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'maps'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} | Maps`} description={post.data.description}>
  <article class="post">
    <header class="post-header">
      <h1>{post.data.title}</h1>

      <div class="post-meta">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>

      {post.data.domains && post.data.domains.length > 0 && (
        <div class="tags">
          {post.data.domains.map((domain) => (
            <span class="tag">{domain}</span>
          ))}
        </div>
      )}

      {post.data.visualType && post.data.visualType.length > 0 && (
        <div class="visual-indicators">
          {post.data.visualType.map((type) => (
            <span class="visual-badge">{type}</span>
          ))}
        </div>
      )}
    </header>

    <div class="post-content">
      <Content />
    </div>

    {post.data.connections && post.data.connections.length > 0 && (
      <aside class="connections">
        <h3>Related Content</h3>
        <ul>
          {post.data.connections.map((connection) => (
            <li><a href={`/${connection}`}>{connection}</a></li>
          ))}
        </ul>
      </aside>
    )}

    <nav class="post-nav">
      <a href="/maps" class="back-link">‚Üê Back to Maps</a>
    </nav>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 750px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .post-header h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .post-meta {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .tag {
    font-size: 0.8125rem;
    padding: 0.25rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 1rem;
    color: var(--text-secondary);
  }

  .visual-indicators {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .visual-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--accent);
    color: white;
    border-radius: 0.25rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .post-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    margin-bottom: 3rem;
  }

  /* Enhanced content styles */
  .post-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
  }

  .post-content :global(h3) {
    font-size: 1.375rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .post-content :global(figure) {
    margin: 2rem 0;
  }

  .post-content :global(figcaption) {
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .connections {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin: 3rem 0;
  }

  .connections h3 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .connections ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .connections li {
    margin-bottom: 0.5rem;
  }

  .post-nav {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .back-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.9375rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.875rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
