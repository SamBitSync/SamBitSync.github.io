---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get recent content
const allMaps = (await getCollection('maps')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const allMeta = (await getCollection('meta')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const allProcess = (await getCollection('process')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
const allProjects = (await getCollection('project')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const recentMaps = allMaps.slice(0, 2);
const recentProcess = allProcess.slice(0, 2);
---

<BaseLayout title="Sambit">
  <div class="hero">
    <h1 class="hero-title">Sambit</h1>
    <p class="location">Kathmandu</p>
    <div class="affiliations">
      <p>Research Intern, Cognitive Science and Psycholinguistics Lab</p>
      <p>Research and Writing Diploma, The Open Institute</p>
    </div>
  </div>

  <div class="sections-grid">
    <a href="/maps" class="section-card maps">
      <div class="section-accent"></div>
      <div class="section-icon">◈</div>
      <h2>Maps</h2>
      <span class="section-count">{allMaps.length} {allMaps.length === 1 ? 'post' : 'posts'}</span>
    </a>

    <a href="/meta" class="section-card meta">
      <div class="section-accent"></div>
      <div class="section-icon">⊕</div>
      <h2>Meta</h2>
      <span class="section-count">{allMeta.length} {allMeta.length === 1 ? 'framework' : 'frameworks'}</span>
    </a>

    <a href="/process" class="section-card process">
      <div class="section-accent"></div>
      <div class="section-icon">⟲</div>
      <h2>Process</h2>
      <span class="section-count">{allProcess.length} {allProcess.length === 1 ? 'entry' : 'entries'}</span>
    </a>

    <a href="/project" class="section-card project">
      <div class="section-accent"></div>
      <div class="section-icon">◆</div>
      <h2>Project</h2>
      <span class="section-count">{allProjects.length} {allProjects.length === 1 ? 'project' : 'projects'}</span>
    </a>
  </div>

  {(recentMaps.length > 0 || recentProcess.length > 0) && (
    <div class="recent-work">
      <h2 class="recent-title">Recent Work</h2>

      {recentMaps.length > 0 && (
        <div class="recent-section">
          <h3 class="recent-section-title">Maps</h3>
          <div class="recent-posts">
            {recentMaps.map((post) => (
              <article class="recent-card">
                <a href={`/maps/${post.slug}`} class="recent-link">
                  <h4>{post.data.title}</h4>
                  <p>{post.data.description}</p>
                  <div class="recent-meta">
                    {post.data.domains && post.data.domains.slice(0, 2).map((domain) => (
                      <span class="meta-tag">{domain}</span>
                    ))}
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      )}

      {recentProcess.length > 0 && (
        <div class="recent-section">
          <h3 class="recent-section-title">Process</h3>
          <div class="recent-posts">
            {recentProcess.map((post) => (
              <article class="recent-card">
                <a href={`/process/${post.slug}`} class="recent-link">
                  <div class="process-badges">
                    <span class={`badge dimension-${post.data.dimension}`}>
                      {post.data.dimension}
                    </span>
                    <span class={`badge status-${post.data.status}`}>
                      {post.data.status}
                    </span>
                  </div>
                  <h4>{post.data.title}</h4>
                  <p>{post.data.description}</p>
                </a>
              </article>
            ))}
          </div>
        </div>
      )}
    </div>
  )}
</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin: 4rem 0 5rem;
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 700;
    letter-spacing: -0.04em;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .location {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.25rem;
  }

  .affiliations {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .affiliations p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    font-weight: 400;
    line-height: 1.5;
    margin: 0;
  }

  .sections-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 6rem;
  }

  .section-card {
    position: relative;
    padding: 2.5rem;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 1rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .section-accent {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, var(--accent) 0%, transparent 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .section-card.maps .section-accent {
    background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%);
  }

  .section-card.meta .section-accent {
    background: linear-gradient(90deg, #7c3aed 0%, #8b5cf6 100%);
  }

  .section-card.process .section-accent {
    background: linear-gradient(90deg, #059669 0%, #10b981 100%);
  }

  .section-card.project .section-accent {
    background: linear-gradient(90deg, #dc2626 0%, #ef4444 100%);
  }

  .section-card:hover .section-accent {
    transform: scaleX(1);
  }

  .section-card:hover {
    border-color: var(--accent);
    box-shadow: var(--shadow-lg);
    transform: translateY(-6px);
  }

  .section-icon {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    opacity: 0.6;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
  }

  .section-card:hover .section-icon {
    opacity: 1;
    transform: scale(1.1);
  }

  .section-card h2 {
    font-size: 1.75rem;
    margin: 0 0 1rem 0;
    font-weight: 600;
  }

  .section-count {
    display: inline-block;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .recent-work {
    margin: 6rem 0;
  }

  .recent-title {
    font-size: 2.25rem;
    font-weight: 600;
    margin-bottom: 3.5rem;
    text-align: center;
    position: relative;
  }

  .recent-title::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--accent);
    border-radius: 2px;
  }

  .recent-section {
    margin-bottom: 3.5rem;
  }

  .recent-section-title {
    font-size: 0.8125rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .recent-posts {
    display: grid;
    gap: 1.5rem;
  }

  .recent-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-left: 3px solid var(--accent);
    border-radius: 0.5rem;
    padding: 2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .recent-card:hover {
    border-left-width: 5px;
    box-shadow: var(--shadow-md);
    transform: translateX(4px);
  }

  .recent-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .process-badges {
    display: flex;
    gap: 0.625rem;
    margin-bottom: 1rem;
  }

  .badge {
    font-size: 0.6875rem;
    padding: 0.3125rem 0.75rem;
    border-radius: 0.3125rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .dimension-empirical {
    background: linear-gradient(135deg, #10b98120 0%, #10b98140 100%);
    color: #10b981;
    border: 1px solid #10b98140;
  }

  .dimension-formal {
    background: linear-gradient(135deg, #3b82f620 0%, #3b82f640 100%);
    color: #3b82f6;
    border: 1px solid #3b82f640;
  }

  .dimension-implementation {
    background: linear-gradient(135deg, #8b5cf620 0%, #8b5cf640 100%);
    color: #8b5cf6;
    border: 1px solid #8b5cf640;
  }

  .status-in-progress {
    background: linear-gradient(135deg, #f59e0b20 0%, #f59e0b40 100%);
    color: #f59e0b;
    border: 1px solid #f59e0b40;
  }

  .status-blocked {
    background: linear-gradient(135deg, #ef444420 0%, #ef444440 100%);
    color: #ef4444;
    border: 1px solid #ef444440;
  }

  .status-completed {
    background: linear-gradient(135deg, #10b98120 0%, #10b98140 100%);
    color: #10b981;
    border: 1px solid #10b98140;
  }

  .recent-card h4 {
    font-size: 1.25rem;
    margin: 0 0 0.75rem 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .recent-card p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.65;
    margin-bottom: 1rem;
  }

  .recent-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .meta-tag {
    font-size: 0.8125rem;
    padding: 0.375rem 0.75rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 0.375rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.75rem;
    }

    .sections-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .recent-title {
      font-size: 1.875rem;
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 2.25rem;
    }

    .section-card {
      padding: 2rem;
    }

    .section-icon {
      font-size: 2.5rem;
    }
  }
</style>
