---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const meta = (await getCollection('meta')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout title="Meta | Sambit">
  <header class="page-header">
    <h1>Meta</h1>
    <p class="lead">Epistemological frameworks, philosophy of science, and methodological foundations</p>
  </header>

  <div class="posts-list">
    {meta.map((post) => (
      <article class="post-item">
        <a href={`/meta/${post.slug}`} class="post-link">
          <div class="post-main">
            <h2>{post.data.title}</h2>
            <p class="post-description">{post.data.description}</p>

            <div class="post-meta">
              <span class="framework">{post.data.framework}</span>
              <span class="maturity-badge maturity-{post.data.maturity}">
                {post.data.maturity}
              </span>
            </div>

            {post.data.thinkers && post.data.thinkers.length > 0 && (
              <div class="thinkers">
                <span class="label">Key thinkers:</span>
                {post.data.thinkers.map((thinker, index) => (
                  <span>{thinker}{index < post.data.thinkers.length - 1 ? ', ' : ''}</span>
                ))}
              </div>
            )}
          </div>

          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short'
            })}
          </time>
        </a>
      </article>
    ))}
  </div>

  {meta.length === 0 && (
    <div class="empty-state">
      <p>No framework pieces yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .post-item:hover {
    border-color: var(--accent);
    transform: translateX(4px);
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .post-main {
    flex: 1;
  }

  .post-item h2 {
    font-size: 1.25rem;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
  }

  .post-description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .framework {
    font-size: 0.875rem;
    color: var(--accent);
    font-weight: 500;
    font-family: var(--font-mono);
  }

  .maturity-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .maturity-draft {
    background: #f59e0b20;
    color: #f59e0b;
    border: 1px solid #f59e0b40;
  }

  .maturity-working {
    background: #3b82f620;
    color: #3b82f6;
    border: 1px solid #3b82f640;
  }

  .maturity-established {
    background: #10b98120;
    color: #10b981;
    border: 1px solid #10b98140;
  }

  .thinkers {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .thinkers .label {
    font-weight: 500;
    margin-right: 0.5rem;
  }

  .post-link time {
    font-size: 0.875rem;
    color: var(--text-secondary);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .post-link {
      flex-direction: column;
      gap: 1rem;
    }

    .post-link time {
      align-self: flex-start;
    }
  }
</style>
