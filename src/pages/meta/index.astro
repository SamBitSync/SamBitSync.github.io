---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const meta = (await getCollection('meta')).sort(
  (a, b) => a.data.title.localeCompare(b.data.title)
);
---

<BaseLayout title="Meta | Sambit">
  <header class="page-header">
    <h1>Meta</h1>
    <p class="lead">Epistemological frameworks, philosophy of science, and methodological foundations</p>
  </header>

  <dl class="index-list">
    {meta.map((entry) => (
      <div class="index-entry">
        <dt class="framework-term">
          <a href={`/meta/${entry.id}`}>{entry.data.framework}</a>
        </dt>
        <dd class="framework-def">
          <a href={`/meta/${entry.id}`}>
            <span class="def-text">{entry.data.title}</span>
            {entry.data.thinkers && entry.data.thinkers.length > 0 && (
              <span class="thinkers">â€” {entry.data.thinkers.join(', ')}</span>
            )}
          </a>
        </dd>
      </div>
    ))}
  </dl>

  {meta.length === 0 && (
    <div class="empty-state">
      <p>No framework entries yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 2.5rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .index-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin: 0;
  }

  .index-entry {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
    align-items: baseline;
    padding: 0.625rem 0;
    border-bottom: 1px solid var(--border);
    transition: background-color 0.15s ease;
  }

  .index-entry:last-child {
    border-bottom: none;
  }

  .index-entry:hover {
    background-color: var(--surface);
  }

  .framework-term {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    margin: 0;
    min-width: 160px;
  }

  .framework-term a {
    text-decoration: none;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .framework-term a:hover {
    color: var(--accent);
  }

  .framework-def {
    margin: 0;
    line-height: 1.5;
  }

  .framework-def a {
    text-decoration: none;
    color: inherit;
  }

  .def-text {
    color: var(--text-primary);
    font-size: 1.0625rem;
    font-weight: 500;
  }

  .framework-def a:hover .def-text {
    color: var(--accent);
  }

  .thinkers {
    color: var(--text-tertiary);
    font-size: 0.875rem;
    font-style: italic;
    margin-left: 0.625rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .index-entry {
      grid-template-columns: 1fr;
      gap: 0.375rem;
    }

    .framework-term {
      min-width: unset;
    }
  }
</style>
