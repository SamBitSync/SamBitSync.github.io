---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const meta = (await getCollection('meta')).sort(
  (a, b) => a.data.title.localeCompare(b.data.title)
);
---

<BaseLayout title="Meta | Sambit">
  <header class="page-header">
    <h1>Meta</h1>
    <p class="lead">Epistemological frameworks, philosophy of science, and methodological foundations</p>
  </header>

  <div class="reference-list">
    {meta.map((entry) => (
      <article class="reference-entry">
        <a href={`/meta/${entry.id}`} class="entry-link">
          <div class="entry-header">
            <h2 class="framework-name">{entry.data.framework}</h2>
            {entry.data.thinkers && entry.data.thinkers.length > 0 && (
              <p class="thinkers">
                {entry.data.thinkers.join(' Â· ')}
              </p>
            )}
          </div>

          <div class="entry-content">
            <h3 class="entry-title">{entry.data.title}</h3>
            <p class="entry-description">{entry.data.description}</p>
          </div>
        </a>
      </article>
    ))}
  </div>

  {meta.length === 0 && (
    <div class="empty-state">
      <p>No framework entries yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .reference-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .reference-entry {
    border-bottom: 1px solid var(--border);
    padding-bottom: 2rem;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .reference-entry:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .reference-entry:hover {
    padding-left: 1rem;
  }

  .entry-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .entry-header {
    margin-bottom: 0.75rem;
  }

  .framework-name {
    font-family: var(--font-mono);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--accent);
    margin: 0 0 0.375rem 0;
    letter-spacing: -0.01em;
    text-transform: uppercase;
  }

  .thinkers {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    margin: 0;
    font-style: italic;
    letter-spacing: 0.01em;
  }

  .entry-content {
    margin-top: 0.5rem;
  }

  .entry-title {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.625rem 0;
    line-height: 1.3;
    font-family: var(--font-serif);
  }

  .entry-link:hover .entry-title {
    color: var(--accent);
  }

  .entry-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .reference-list {
      gap: 2rem;
    }

    .reference-entry {
      padding-bottom: 1.5rem;
    }

    .entry-title {
      font-size: 1.25rem;
    }
  }
</style>
