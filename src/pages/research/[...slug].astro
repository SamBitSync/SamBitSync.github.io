---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ConnectionsMap from '../../components/ConnectionsMap.astro';

export async function getStaticPaths() {
  const researchEntries = await getCollection('research');
  return researchEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout 
  title={`${entry.data.title} | Research`} 
  description={entry.data.description}
  mode="academic"
>
  <article class="research-article">
    <div class="article-header">
      <div class="breadcrumb">
        <a href="/research">‚Üê Back to Research</a>
      </div>
      
      <div class="article-meta">
        <div class="meta-badges">
          <span class="status-badge" data-status={entry.data.status}>
            {entry.data.status}
          </span>
          <span class="confidence-badge" data-confidence={entry.data.confidence}>
            {entry.data.confidence}
          </span>
        </div>
        <time class="article-date">
          {entry.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
      </div>
      
      <h1 class="article-title">{entry.data.title}</h1>
      <p class="article-description">{entry.data.description}</p>
      
      <div class="article-details">
        <div class="detail-section">
          <h3>Methodology</h3>
          <div class="methodology-list">
            {entry.data.methodology.map(method => (
              <span class="methodology-tag">{method}</span>
            ))}
          </div>
        </div>
        
        {entry.data.collaborators && entry.data.collaborators.length > 0 && (
          <div class="detail-section">
            <h3>Collaborators</h3>
            <p>{entry.data.collaborators.join(', ')}</p>
          </div>
        )}
        
        <div class="detail-section">
          <h3>Research Tags</h3>
          <div class="tags-list">
            {entry.data.tags.map(tag => (
              <span class="research-tag">{tag}</span>
            ))}
          </div>
        </div>
      </div>
    </div>

    <div class="article-content">
      <Content />
    </div>

    <ConnectionsMap 
      connections={entry.data.connections || []}
      currentSlug={entry.slug}
      type="research"
    />

    <div class="article-navigation">
      <div class="nav-section">
        <h4>Related Research</h4>
        <div 
          id="related-research"
          hx-get={`/api/related/research/${entry.slug}`}
          hx-trigger="load"
        >
          <p class="loading">Loading related research...</p>
        </div>
      </div>
      
      <div class="nav-section">
        <h4>Connected Frameworks</h4>
        <div 
          id="connected-frameworks"
          hx-get={`/api/frameworks/connected/${entry.slug}`}
          hx-trigger="load"
        >
          <p class="loading">Loading connected frameworks...</p>
        </div>
      </div>
    </div>

    <div class="citation-info">
      <h4>Citation</h4>
      <div class="citation-text">
        <p>
          <strong>APA Style:</strong><br>
          [Author]. ({entry.data.date.getFullYear()}). <em>{entry.data.title}</em>. 
          Academic Research Project. Retrieved from https://sambitmaps.systems/research/{entry.slug}
        </p>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .research-article {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .article-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--accent);
  }

  .breadcrumb {
    margin-bottom: 1rem;
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .meta-badges {
    display: flex;
    gap: 0.5rem;
  }

  .status-badge, .confidence-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-weight: 500;
  }

  .status-badge[data-status="ongoing"] {
    background: #fef3c7;
    color: #92400e;
  }

  .status-badge[data-status="completed"] {
    background: #d1fae5;
    color: #065f46;
  }

  .status-badge[data-status="published"] {
    background: #dbeafe;
    color: #1e40af;
  }

  .confidence-badge {
    background: var(--bg);
    color: var(--secondary);
    border: 1px solid var(--secondary);
  }

  .article-date {
    font-size: 0.875rem;
    color: var(--secondary);
  }

  .article-title {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    color: var(--primary);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .article-description {
    font-size: 1.25rem;
    color: var(--secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .article-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .detail-section h3 {
    font-size: 0.875rem;
    color: var(--primary);
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .methodology-list, .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .methodology-tag {
    background: var(--accent);
    color: white;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .research-tag {
    background: var(--bg);
    color: var(--secondary);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    border: 1px solid var(--secondary);
  }

  .article-content {
    margin-bottom: 3rem;
  }

  /* Styling for the rendered markdown content */
  .article-content :global(h2) {
    font-family: var(--font-serif);
    font-size: 1.75rem;
    color: var(--primary);
    margin: 2rem 0 1rem 0;
    border-bottom: 1px solid var(--secondary);
    padding-bottom: 0.5rem;
  }

  .article-content :global(h3) {
    font-family: var(--font-serif);
    font-size: 1.375rem;
    color: var(--primary);
    margin: 1.5rem 0 0.75rem 0;
  }

  .article-content :global(h4) {
    font-size: 1.125rem;
    color: var(--primary);
    margin: 1.25rem 0 0.5rem 0;
    font-weight: 600;
  }

  .article-content :global(p) {
    margin-bottom: 1.25rem;
    color: var(--primary);
  }

  .article-content :global(ul), .article-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
    color: var(--primary);
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--secondary);
  }

  .article-content :global(code) {
    background: var(--bg);
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .article-content :global(pre) {
    background: var(--bg);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article-navigation {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    padding: 2rem;
    background: var(--surface);
    border: 1px solid var(--secondary);
    border-radius: 0.75rem;
  }

  .nav-section h4 {
    font-family: var(--font-serif);
    color: var(--primary);
    margin: 0 0 1rem 0;
    font-size: 1.125rem;
  }

  .loading {
    color: var(--secondary);
    font-style: italic;
  }

  .citation-info {
    background: var(--bg);
    border: 1px solid var(--secondary);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .citation-info h4 {
    font-family: var(--font-serif);
    color: var(--primary);
    margin: 0 0 1rem 0;
    font-size: 1.125rem;
  }

  .citation-text {
    font-size: 0.875rem;
    color: var(--secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 2rem;
    }
    
    .article-details {
      grid-template-columns: 1fr;
    }
    
    .article-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .article-navigation {
      grid-template-columns: 1fr;
    }
  }
</style>