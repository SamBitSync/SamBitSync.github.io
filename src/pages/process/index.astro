---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const process = (await getCollection('process')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const formal = process.filter(p => p.data.dimension === 'formal');
const empirical = process.filter(p => p.data.dimension === 'empirical');
const implementation = process.filter(p => p.data.dimension === 'implementation');
const troubleshooting = process.filter(p => p.data.dimension === 'troubleshooting');
const exploration = process.filter(p => p.data.dimension === 'exploration');
---

<BaseLayout title="Process | Sambit">
  <header class="page-header">
    <h1>Process</h1>
    <p class="lead">Documenting work as it happens - what theory predicts, what actually happens, what gets built, what breaks, and what emerges unexpectedly</p>
  </header>

  <div class="filters">
    <button class="filter-btn active" data-filter="all">All</button>
    <button class="filter-btn" data-filter="formal">
      Formal <span class="count">({formal.length})</span>
    </button>
    <button class="filter-btn" data-filter="empirical">
      Empirical <span class="count">({empirical.length})</span>
    </button>
    <button class="filter-btn" data-filter="implementation">
      Implementation <span class="count">({implementation.length})</span>
    </button>
    <button class="filter-btn" data-filter="troubleshooting">
      Troubleshooting <span class="count">({troubleshooting.length})</span>
    </button>
    <button class="filter-btn" data-filter="exploration">
      Exploration <span class="count">({exploration.length})</span>
    </button>
  </div>

  <div class="posts-list">
    {process.map((post) => (
      <article class={`post-item dimension-${post.data.dimension}`} data-dimension={post.data.dimension}>
        <a href={`/process/${post.id}`} class="post-link">
          <div class="post-main">
            <div class="post-header-meta">
              <span class={`dimension-badge dimension-${post.data.dimension}`}>
                {post.data.dimension}
              </span>
              <span class={`status-badge status-${post.data.status}`}>
                {post.data.status}
              </span>
            </div>

            <h2>{post.data.title}</h2>
            <p class="post-description">{post.data.description}</p>

            {post.data.tools && post.data.tools.length > 0 && (
              <div class="tools">
                {post.data.tools.map((tool) => (
                  <span class="tool-tag">{tool}</span>
                ))}
              </div>
            )}

            {post.data.project && (
              <div class="project-link">
                â†’ Part of: {post.data.project}
              </div>
            )}
          </div>

          <time datetime={post.data.date.toISOString()}>
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric'
            })}
          </time>
        </a>
      </article>
    ))}
  </div>

  {process.length === 0 && (
    <div class="empty-state">
      <p>No process entries yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const posts = document.querySelectorAll('.post-item');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter;

        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter posts
        posts.forEach(post => {
          if (filter === 'all' || post.dataset.dimension === filter) {
            post.style.display = 'block';
          } else {
            post.style.display = 'none';
          }
        });
      });
    });
  });
</script>

