---
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const process = await getCollection('process');
  return process.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'process'>;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} | Process`} description={post.data.description}>
  <article class="post">
    <header class="post-header">
      <div class="header-meta">
        <span class={`dimension-badge dimension-${post.data.dimension}`}>
          {post.data.dimension}
        </span>
        <span class={`status-badge status-${post.data.status}`}>
          {post.data.status}
        </span>
      </div>

      <h1>{post.data.title}</h1>

      <div class="post-meta">
        <time datetime={post.data.date.toISOString()}>
          {post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>

      {post.data.tools && post.data.tools.length > 0 && (
        <div class="tools">
          <strong>Tools:</strong>
          <div class="tool-tags">
            {post.data.tools.map((tool) => (
              <span class="tool-tag">{tool}</span>
            ))}
          </div>
        </div>
      )}

      {post.data.project && (
        <div class="project-context">
          <strong>Project:</strong> <a href={`/project/${post.data.project}`}>{post.data.project}</a>
        </div>
      )}
    </header>

    <div class="post-content">
      <Content />
    </div>

    <nav class="post-nav">
      <a href="/process" class="back-link">‚Üê Back to Process</a>
    </nav>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 750px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .header-meta {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .dimension-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .dimension-badge.dimension-formal {
    background: #3b82f620;
    color: #3b82f6;
  }

  .dimension-badge.dimension-empirical {
    background: #10b98120;
    color: #10b981;
  }

  .dimension-badge.dimension-implementation {
    background: #8b5cf620;
    color: #8b5cf6;
  }

  .dimension-badge.dimension-troubleshooting {
    background: #f59e0b20;
    color: #f59e0b;
  }

  .dimension-badge.dimension-exploration {
    background: #ec489920;
    color: #ec4899;
  }

  .status-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-weight: 500;
  }

  .status-badge.status-in-progress {
    background: #f59e0b20;
    color: #f59e0b;
    border: 1px solid #f59e0b40;
  }

  .status-badge.status-blocked {
    background: #ef444420;
    color: #ef4444;
    border: 1px solid #ef444440;
  }

  .status-badge.status-completed {
    background: #10b98120;
    color: #10b981;
    border: 1px solid #10b98140;
  }

  .post-header h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .post-meta {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .tools {
    margin-top: 1rem;
    font-size: 0.9375rem;
  }

  .tools strong {
    color: var(--text-primary);
    margin-right: 0.5rem;
  }

  .tool-tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tool-tag {
    font-size: 0.8125rem;
    padding: 0.25rem 0.625rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 0.25rem;
    color: var(--text-secondary);
    font-family: var(--font-mono);
  }

  .project-context {
    margin-top: 0.75rem;
    font-size: 0.9375rem;
  }

  .project-context strong {
    color: var(--text-primary);
  }

  .project-context a {
    color: var(--accent);
    text-decoration: none;
  }

  .project-context a:hover {
    text-decoration: underline;
  }

  .post-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    margin-bottom: 3rem;
  }

  .post-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
  }

  .post-content :global(h3) {
    font-size: 1.375rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .post-content :global(img),
  .post-content :global(figure) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 2rem 0;
  }

  .post-content :global(figcaption) {
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  /* Code blocks */
  .post-content :global(pre) {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-size: 0.875rem;
  }

  .post-nav {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .back-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.9375rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.875rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>
