---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = (await getCollection('project')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const featured = projects.filter(p => p.data.featured);
const regular = projects.filter(p => !p.data.featured);
---

<BaseLayout title="Project | Sambit">
  <header class="page-header">
    <h1>Project</h1>
    <p class="lead">Completed research outputs and polished deliverables</p>
  </header>

  {featured.length > 0 && (
    <section class="featured-section">
      <h2 class="section-title">Featured</h2>
      <div class="featured-grid">
        {featured.map((project) => (
          <article class="featured-card">
            {project.data.thumbnail && (
              <div class="thumbnail">
                <img src={project.data.thumbnail} alt={project.data.title} />
              </div>
            )}
            <div class="featured-content">
              <div class="project-meta">
                <span class={`type-badge type-${project.data.type}`}>
                  {project.data.type}
                </span>
                <span class={`status-badge status-${project.data.status}`}>
                  {project.data.status}
                </span>
              </div>

              <h3>
                <a href={`/project/${project.slug}`}>{project.data.title}</a>
              </h3>
              <p class="description">{project.data.description}</p>

              {project.data.outputs && project.data.outputs.length > 0 && (
                <div class="outputs">
                  {project.data.outputs.map((output) => (
                    output.url ? (
                      <a href={output.url} class="output-link" target="_blank" rel="noopener noreferrer">
                        {output.label || output.type} â†’
                      </a>
                    ) : (
                      <span class="output-label">{output.label || output.type}</span>
                    )
                  ))}
                </div>
              )}

              <time datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long'
                })}
              </time>
            </div>
          </article>
        ))}
      </div>
    </section>
  )}

  <section class="projects-section">
    {featured.length > 0 && <h2 class="section-title">All Projects</h2>}
    <div class="projects-grid">
      {regular.map((project) => (
        <article class="project-card">
          <a href={`/project/${project.slug}`} class="project-link">
            <div class="project-header">
              <div class="project-meta">
                <span class={`type-badge type-${project.data.type}`}>
                  {project.data.type}
                </span>
                <span class={`status-badge status-${project.data.status}`}>
                  {project.data.status}
                </span>
              </div>

              <h3>{project.data.title}</h3>
              <p class="description">{project.data.description}</p>

              <time datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long'
                })}
              </time>
            </div>

            {project.data.outputs && project.data.outputs.length > 0 && (
              <div class="outputs-compact">
                {project.data.outputs.map((output) => (
                  <span class="output-tag">{output.label || output.type}</span>
                ))}
              </div>
            )}
          </a>
        </article>
      ))}
    </div>
  </section>

  {projects.length === 0 && (
    <div class="empty-state">
      <p>No projects yet. Check back soon.</p>
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }

  .section-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  /* Featured Projects */
  .featured-section {
    margin-bottom: 4rem;
  }

  .featured-grid {
    display: grid;
    gap: 2rem;
  }

  .featured-card {
    background: var(--surface);
    border: 2px solid var(--accent);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .featured-card:hover {
    transform: translateY(-4px);
  }

  .thumbnail {
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: var(--bg);
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-content {
    padding: 2rem;
  }

  .featured-card h3 {
    font-size: 1.75rem;
    margin: 1rem 0 0.75rem;
  }

  .featured-card h3 a {
    color: var(--text-primary);
    text-decoration: none;
  }

  .featured-card h3 a:hover {
    color: var(--accent);
  }

  /* Regular Projects Grid */
  .projects-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  }

  .project-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .project-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .project-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .type-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .type-badge.type-research {
    background: #3b82f620;
    color: #3b82f6;
  }

  .type-badge.type-tool {
    background: #8b5cf620;
    color: #8b5cf6;
  }

  .type-badge.type-paper {
    background: #10b98120;
    color: #10b981;
  }

  .type-badge.type-application {
    background: #f59e0b20;
    color: #f59e0b;
  }

  .type-badge.type-storymap {
    background: #ec489920;
    color: #ec4899;
  }

  .status-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    border-radius: 0.25rem;
    font-weight: 500;
  }

  .status-badge.status-completed {
    background: #10b98120;
    color: #10b981;
    border: 1px solid #10b98140;
  }

  .status-badge.status-published {
    background: #3b82f620;
    color: #3b82f6;
    border: 1px solid #3b82f640;
  }

  .status-badge.status-deployed {
    background: #8b5cf620;
    color: #8b5cf6;
    border: 1px solid #8b5cf640;
  }

  .project-card h3 {
    font-size: 1.25rem;
    margin: 0 0 0.75rem 0;
    color: var(--text-primary);
  }

  .description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  time {
    font-size: 0.875rem;
    color: var(--text-secondary);
    display: block;
    margin-top: 1rem;
  }

  .outputs {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin: 1.5rem 0 1rem;
  }

  .output-link {
    color: var(--accent);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
  }

  .output-link:hover {
    text-decoration: underline;
  }

  .output-label {
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  .outputs-compact {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .output-tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.625rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 0.25rem;
    color: var(--text-secondary);
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .thumbnail {
      height: 200px;
    }

    .featured-content {
      padding: 1.5rem;
    }

    .featured-card h3 {
      font-size: 1.5rem;
    }
  }
</style>
